<%- include('particles/header.ejs') %>

<%- include('particles/navigation.ejs') %>
<div class="auth_section">
    <form action="/login" method="post">
        <div class="form-group">
            <li class="form-group__label" for="name">username</li>
            <input class="form-group__input" type="text" id="name" name="name" placeholder="username" onchange='document.getElementById("reg_name").value = this.value'>
        </div>
        
        <div class="form-group">
            <li class="form-group__label" for="password">Password</li>
            <input class="form-group__input" type="password" id="password" name="password" placeholder="Password" onchange='document.getElementById("reg_password").value = this.value'>
        </div>
        <button class="Sign_btn" type="submit" value="Log in"><li>Sign in</li></button>
    </form>
    
    <form action="/register" method="post">
        <div class="form-group" style="display: none;">
            <li class="form-group__label" for="name">username</li>
            <input class="form-group__input" type="text" id="reg_name" name="name" placeholder="username">
        </div>
    
        <div class="form-group" style="display: none;">
            <li class="form-group__label" for="password">Password</li>
            <input class="form-group__input" type="password" id="reg_password" name="password" placeholder="Password">
        </div>
    
        <button class="Sign_btn" type="submit" value="Register" style><li>Sign up</li></button>
    </form>
</div>

